{
  "name": "rinbot-nodejs",
  "version": "1.0.0",
  "description": "Discord bot với nhiều game và tính năng",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "deploy": "node start.js",
    "manager": "node deploy-manager.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:delete": "pm2 delete all",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "restart": "node scripts/restart.js",
    "safe-restart": "npm run pm2:stop && sleep 3 && npm run pm2:start",
    "logs": "pm2 logs RinBot --lines 50",
    "monitor": "pm2 monit",
    "health": "pm2 show RinBot"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "chokidar": "^3.6.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.5.0",
    "moment": "^2.30.1",
    "mongoose": "^8.7.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "pm2": "^5.4.3"
  },
  "keywords": [
    "discord",
    "bot",
    "game",
    "mongodb"
  ],
  "author": "RinBot",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
