# Discord Bot Configuration
DISCORD_TOKEN=add-token-bot

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/rinbot

# Optional: MongoDB Atlas
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/rinbot

# Bot Settings
PREFIX=,
NODE_ENV=development

# Owner Configuration (BẮT BUỘC cho lệnh update)
DISCORD_OWNER_ID=429078973562093569

# GitHub Private Repository (BẮT BUỘC cho private repo)
# Tạo Personal Access Token tại: https://github.com/settings/tokens
# Cần quyền: repo (full repository access)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username

# Deploy Notification (Tùy chọn)
DEPLOY_WEBHOOK_ID=webhook_id
DEPLOY_WEBHOOK_TOKEN=webhook_token
DEPLOY_CHANNEL_ID=room_id

# Optional: Logging
LOG_LEVEL=info

